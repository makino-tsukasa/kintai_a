<% provide(:button_text, '修正') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">拠点情報修正</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @base, url: bases_edit_path(id: @base.id), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', obj: @base %>

            <%= f.label :base_number, class: "form-edit-label" %>
            <%= f.text_field :base_number, class: "form-control" %>

            <%= f.label :base_name, class: "form-edit-label" %>
            <%= f.text_field :base_name, class: "form-control" %>

            <%= f.label :type_of_attendance, class: "form-edit-label" %>
            <%= f.text_field :type_of_attendance, class: "form-control" %>

            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-form-edit" %>
              <button type="button" class="btn btn-default btn-form-edit" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>